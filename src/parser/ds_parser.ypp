enum_basic_type_declaration
    :   DAS_TINT        { $$ = Type::tInt; }
    |   DAS_TINT8       { $$ = Type::tInt8; }
    |   DAS_TINT16      { $$ = Type::tInt16; }
    |   DAS_TUINT       { $$ = Type::tUInt; }
    |   DAS_TUINT8      { $$ = Type::tUInt8; }
    |   DAS_TUINT16     { $$ = Type::tUInt16; }
