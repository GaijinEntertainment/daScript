optional_public_or_private_enum
    :                { $$ = g_Program->thisModule->isPublic; }
    |   DAS_PRIVATE  { $$ = false; }
    |   DAS_PUBLIC   { $$ = true; }
    ;

enum_declaration
    :   optional_annotation_list[annL] DAS_ENUM[loc] optional_public_or_private_enum[pubE] NAME[name] '{' enum_list[pE] '}' {
        das_checkName(*$name,tokAt(scanner,@name));
        auto pEnum = EnumerationPtr($pE);
        pEnum->at = tokAt(scanner,@name);
        pEnum->name = *$name;
        pEnum->isPrivate = !$pubE;
        if ( $annL ) {
            for ( auto pA : *$annL ) {
                if ( pA->annotation ) {
                    if ( pA->annotation->rtti_isEnumerationAnnotation() ) {
                        auto ann = static_pointer_cast<EnumerationAnnotation>(pA->annotation);
                        string err;
                        if ( !ann->touch(pEnum, *g_Program->thisModuleGroup, pA->arguments, err) ) {
                            das_yyerror("macro [" +pA->annotation->name + "] failed to finalize the enumeration " + pEnum->name + "\n" + err, tokAt(scanner,@annL),
                                CompilationError::invalid_annotation);
                        }
                    }
                }
            }
            swap ( pEnum->annotations, *$annL );
            delete $annL;
        }
        if ( !g_Program->addEnumeration(pEnum) ) {
            das_yyerror("enumeration is already defined "+*$name,tokAt(scanner,@pE),
                CompilationError::enumeration_already_declared);
        }
        delete $name;
    }
    |   optional_annotation_list[annL] DAS_ENUM[loc] optional_public_or_private_enum[pubE] NAME[name] ':' enum_basic_type_declaration[ebt] '{' enum_list[pE] '}' {
