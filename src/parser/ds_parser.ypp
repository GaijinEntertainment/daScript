        }
        ast_enumDeclaration(scanner,$annL,tokAt(scanner,@annL),$pubE,$name,tokAt(scanner,@name),$pE,tokAt(scanner,@pE),Type::tInt);
    }
    |   optional_annotation_list[annL] DAS_ENUM[loc] optional_public_or_private_enum[pubE] enum_name[name] ':' enum_basic_type_declaration[ebt] '{' enum_list[pE] '}' {
        if ( !yyextra->g_CommentReaders.empty() ) {
            auto pubename = tokAt(scanner,@pE);
            for ( auto & crd : yyextra->g_CommentReaders ) crd->afterEnumeration($name->c_str(),pubename);
        }
        ast_enumDeclaration(scanner,$annL,tokAt(scanner,@annL),$pubE,$name,tokAt(scanner,@name),$pE,tokAt(scanner,@pE),$ebt);
    }
